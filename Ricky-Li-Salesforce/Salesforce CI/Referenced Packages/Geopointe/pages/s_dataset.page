	            	</apex:outputPanel>
	                <apex:inputcheckbox value="{!cdataset.Available_Visualize}"/>
	            </apex:pageBlockSectionItem>
	            <apex:pageBlockSectionItem >
	                <apex:outputLabel value=""/>
	                <apex:outputText value=""/>
	            </apex:pageBlockSectionItem>
	            
	            
	     </apex:pageBlockSection>
