				    </div>
	            </apex:outputPanel> 
	        </apex:pageBlockSectionItem>
	        
	     </apex:pageBlockSection>
	      
	     <apex:pageBlockSection title="Data Set Filters" rendered="{!selectedEntity!=''}" collapsible="false" columns="1">
	     	
