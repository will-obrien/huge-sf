	            </apex:outputPanel>    
	            <apex:inputTextarea value="{!cdataset.CustomSOQL}" cols="150" rows="9"/>
	        </apex:pageBlockSectionItem>
	     </apex:pageBlockSection> 
	  </apex:pageBlock>
	</div>
  </apex:form>

