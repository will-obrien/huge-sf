          Tel: +1 201.719.7210 Fax: +1 201.222.5022<br/>
          Email: memberservices@garp.com<br/>
          <apex:outputText value="Federal Tax ID: 02-0571577" rendered="{!oppty.company=='GARP'}"/>
          <apex:outputText value="Federal Tax ID: 20-3453938" rendered="{!oppty.company=='GRA'}"/>
        </div>
        <div class="panel-right-invoice-pdf">
