            <apex:outputPanel style="width: {!IF(fieldSet.isSingleColumn, '18%','36%')};"
              styleClass="labelCol zcustomField"
              onmouseover="zhelpMouseOver(this, true);"
              onmouseout="zhelpMouseOver(this, false);">
