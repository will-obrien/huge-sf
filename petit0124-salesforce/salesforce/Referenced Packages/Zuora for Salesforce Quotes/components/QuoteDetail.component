              <apex:outputLabel style="margin-right: 8px;">{!field.label}</apex:outputLabel>
            </apex:outputPanel>
            <apex:outputPanel style="float: left; padding-top:5px;">
              <c:LookupComponent options="{!invoiceOwnerLookupOptions}"
