          rendered="{!AND(field.name == (namespace + 'Previewed_Discount__c'), !isInEditMode)}">
          <apex:pageblockSectionItem >
            <apex:outputPanel style="width: {!IF(fieldSet.isSingleColumn, '18%','36%')};"
