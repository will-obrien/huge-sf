<apex:page standardController="zqu__Quote__c" sidebar="true"
	showHeader="true">
	<style type="text/css">
.bPageBlock .pbTitle {
	width: auto; /* hack pageBlock's title bar */
}

.notice {
	background: yellow url({!$Resource.zqu__notice}) no-repeat scroll 5px 3px;
	color: red;
	font-weight: bold;
	width: 400px;
	margin: 0 0 7px 0;
	padding: 2px 0 2px 23px;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	-webkit-box-shadow: 1px 1px 1px gray;
	-moz-box-shadow: 1px 1px 1px gray;
}
</style>

	<apex:sectionHeader title="{!$Label.QUOTE_CURRENCY_CHANGE_CURRENCY}"
		subtitle="{!zqu__Quote__c.Name}" id="changeCurrency" />

	<c:Notification failureTitle="{!$Label.WARNING}"
		failureBody="{!$Label.QUOTE_CURRENCY_NOTICE}" />
	<apex:pageBlock >
		<apex:form >

			<apex:outputPanel id="outputMessage">
				<apex:actionStatus id="outputStatus"
					startText="{!$Label.ACTION_STATUS_REQUESTING}">
					<apex:facet name="stop">

						<apex:pageBlockSection columns="1">

							<apex:pageBlockSectionItem >
								<apex:outputPanel >
									<apex:outputLabel value="{!$Label.QUOTE_CURRENCY_OLD_CURRENCY}"
										for="quote_currency_old" />
								</apex:outputPanel>
								<apex:outputText value="{!zqu__Quote__c.zqu__Currency__c}"
									id="quote_currency_old" />
							</apex:pageBlockSectionItem>

							<apex:pageBlockSectionItem >
								<apex:outputPanel >
									<apex:outputLabel value="{!$Label.QUOTE_CURRENCY_NEW_CURRENCY}"
										for="quote_currency_new" />
								</apex:outputPanel>
								<apex:inputField value="{!zqu__Quote__c.zqu__Currency__c}"
									id="quote_currency_new" />
							</apex:pageBlockSectionItem>

						</apex:pageBlockSection>

					</apex:facet>
				</apex:actionStatus>
			</apex:outputPanel>

			<center>
				<apex:commandButton action="{!save}" reRender="outputMessage"
					status="outputStatus"
					value="{!$Label.QUOTE_CURRENCY_CHANGE_CURRENCY}" />
				<apex:commandButton action="{!cancel}"
					value="{!$Label.BUTTON_CANCEL}" />
			</center>

		</apex:form>
	</apex:pageBlock>
</apex:page>