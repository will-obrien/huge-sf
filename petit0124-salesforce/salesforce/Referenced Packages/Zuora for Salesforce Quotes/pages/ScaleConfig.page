<apex:page showHeader="true" tabStyle="Z_Quote_Config__tab" sidebar="false" controller="zqu.ScaleConfigController" title="{!$Label.CONFIG_SCALE_TITLE}" >

	<style>
		.tertiaryPalette {
	    	background-color: #DADFEB !important;
	    }
	</style>

	<apex:form >

		<!-- Help component -->
		<c:HelpComponent cid="COM-0026" rightAlign="true" />
		
		<!-- page title -->
		<c:PageTitle title="{!$Label.CONFIG_SCALE_TITLE}" subtitle="{!$Label.CONFIG_SCALE_SUBTITLE}" />

		<apex:outputPanel id="theNotification" >
			<c:Notification />
		</apex:outputPanel>

		<apex:pageBlock id="pageBlock" >

			<!-- buttons -->
			<apex:pageBlockButtons >
				<!-- Read only mode -->
				<apex:commandButton value="{!$Label.BUTTON_EDIT}" action="{!onClickEdit}" rendered="{!NOT(isEditMode)}" reRender="pageBlock" />
				<apex:commandButton value="{!$Label.BUTTON_BACK_SETTINGS}" rendered="{!NOT(isEditMode)}" action="{!onBackToConfig}" />

				<!-- Edit mode -->
				<apex:commandButton value="{!$Label.BUTTON_SAVE}" action="{!onClickSave}" rendered="{!isEditMode}" reRender="pageBlock,theNotification" />
				<apex:commandButton value="{!$Label.BUTTON_CANCEL}" action="{!onClickCancel}" immediate="true" rendered="{!isEditMode}" reRender="pageBlock"/>
			</apex:pageBlockButtons>

			<!-- Iterate through the CHARGE field names -->
			<apex:pageBlockSection columns="1" title="{!$Label.SCALE_SETTING_OBJECT_LEVEL_CHARGE}" rendered="{!NOT(isEditMode)}" collapsible="false" >
				<apex:repeat value="{!chargeFieldNames}" var="fieldName" >
					<apex:pageBlockSectionItem >
						<apex:outputLabel value="{!fieldName}" html-data-fieldName="{!fieldName}" />
						<apex:outputField value="{!settingsByName['CHARGE'][fieldName].Scale__c}" />
					</apex:pageBlockSectionItem>
				</apex:repeat>
			</apex:pageBlockSection>

			<!-- Iterate through the TIER field names -->
			<apex:pageBlockSection columns="1" title="{!$Label.SCALE_SETTING_OBJECT_LEVEL_TIER}" rendered="{!NOT(isEditMode)}" collapsible="false" >
				<apex:repeat value="{!tierFieldNames}" var="fieldName" >
					<apex:pageBlockSectionItem >
						<apex:outputLabel value="{!fieldName}" />
						<apex:outputField value="{!settingsByName['TIER'][fieldName].Scale__c}" />
					</apex:pageBlockSectionItem>
				</apex:repeat>
			</apex:pageBlockSection>

			<!-- Edit mode CHARGE level -->
			<apex:pageBlockSection columns="1" title="{!$Label.SCALE_SETTING_OBJECT_LEVEL_CHARGE}" rendered="{!isEditMode}" collapsible="false" >
				<apex:repeat value="{!chargeFieldNames}" var="fieldName" rendered="{!isEditMode}" >
					<apex:pageBlockSectionItem >
						<apex:outputLabel value="{!fieldName}" html-data-fieldName="{!fieldName}" />
						<apex:inputField value="{!settingsByName['CHARGE'][fieldName].Scale__c}" />
					</apex:pageBlockSectionItem>
				</apex:repeat>
			</apex:pageBlockSection>

			<!-- Edit mode TIER level -->
			<apex:pageBlockSection columns="1" title="{!$Label.SCALE_SETTING_OBJECT_LEVEL_TIER}" rendered="{!isEditMode}" collapsible="false" >
				<apex:repeat value="{!tierFieldNames}" var="fieldName" >
					<apex:pageBlockSectionItem >
						<apex:outputLabel value="{!fieldName}" />
						<apex:inputField value="{!settingsByName['TIER'][fieldName].Scale__c}" />
					</apex:pageBlockSectionItem>
				</apex:repeat>
			</apex:pageBlockSection>

		</apex:pageBlock>
	</apex:form>
</apex:page>