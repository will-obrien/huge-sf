<apex:page standardController="zqu__Quote__c" title="Change Invoice Owner"
  extensions="zqu.InvoiceOwnerIncludeController" sidebar="true"
  showHeader="true">
  <apex:form >
    <apex:sectionHeader title="{!$Label.INVOICE_OWNER_CHANGE_INVOICE_OWNER}"
      subtitle="{!zqu__Quote__c.Name}" />
    <apex:outputPanel id="errorPanel">
      <c:Notification failureTitle="{!$Label.ERROR_PAGE_LOAD}"/>
    </apex:outputPanel>
    <apex:pageBlock rendered="{!invoiceOwner.isInvoiceOwnerEnabled}">
      <apex:pageBlockSection >
        <apex:pageblockSectionItem >
          <apex:outputPanel >
            <apex:outputLabel >{!$Label.INVOICE_OWNER}</apex:outputLabel>
          </apex:outputPanel>
          <apex:outputPanel >
            <c:LookupComponent options="{!invoiceOwnerLookupOptions}"></c:LookupComponent>
          </apex:outputPanel>
        </apex:pageblockSectionItem>
      </apex:pageBlockSection>
      <apex:pageBlockButtons >
        <apex:commandButton value="{!$Label.BUTTON_SAVE}" action="{!save}" />
        <apex:commandButton value="{!$Label.BUTTON_CANCEL}" action="{!cancel}" />
      </apex:pageBlockButtons>
    </apex:pageBlock>

  </apex:form>
</apex:page>