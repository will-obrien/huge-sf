<apex:page docType="html-5.0" applyHtmlTag="false" applyBodyTag="false" standardcontroller="Account" sidebar="false" showheader="false" standardstylesheets="false">
<html> 
  <head> 
    <title>Account</title> 
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, height=device-height, width=device-width" />
	<apex:styleSheet value="https://ajax.aspnetcdn.com/ajax/jquery.mobile/1.3.1/jquery.mobile-1.3.1.min.css" />
	<apex:includeScript value="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.9.1.min.js"/>
	<apex:includeScript value="https://ajax.aspnetcdn.com/ajax/jquery.mobile/1.3.1/jquery.mobile-1.3.1.min.js"/>
  </head>
  <body>
    <div data-role="page" id="main">
      <div data-role="header">
        <h1>Account</h1>
      </div> <!--  /header -->
      <div data-role="content">
        <div class="ui-grid-a">
          <div class="ui-block-a"><strong>Name</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Account.Name}"/></div>
          <div class="ui-block-a"><strong>Industry</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Account.Industry}"/></div>
          <div class="ui-block-a"><strong>Type</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Account.Type}"/></div>
          <div class="ui-block-a"><strong>Employees</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Account.NumberOfEmployees}"/></div>
          <div class="ui-block-a"><strong>Phone</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Account.Phone}"/></div>
        </div>
      </div> <!-- /content -->
    </div> <!-- /page -->
  </body>
</html>
</apex:page>