<apex:page docType="html-5.0" applyHtmlTag="false" applyBodyTag="false" standardcontroller="Contact" sidebar="false" showheader="false" standardstylesheets="false">
<html> 
  <head> 
    <title>Contact</title> 
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, height=device-height, width=device-width" />
	<apex:styleSheet value="https://ajax.aspnetcdn.com/ajax/jquery.mobile/1.3.1/jquery.mobile-1.3.1.min.css" />
	<apex:includeScript value="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.9.1.min.js"/>
	<apex:includeScript value="https://ajax.aspnetcdn.com/ajax/jquery.mobile/1.3.1/jquery.mobile-1.3.1.min.js"/>
  </head>
  <body>
    <div data-role="page" id="main">
      <div data-role="header">
        <h1>Contact</h1>
      </div> <!--  /header -->
      <div data-role="content">
        <div class="ui-grid-a">
          <div class="ui-block-a"><strong>Salutation</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Contact.Salutation}"/></div>
          <div class="ui-block-a"><strong>First Name</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Contact.FirstName}"/></div>
          <div class="ui-block-a"><strong>Last Name</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Contact.LastName}"/></div>
          <div class="ui-block-a"><strong>Email</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Contact.Email}"/></div>
          <div class="ui-block-a"><strong>Phone</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Contact.Phone}"/></div>
          <div class="ui-block-a"><strong>Mobile</strong></div>
          <div class="ui-block-b"><apex:outputText value="{!Contact.MobilePhone}"/></div>
        </div>
      </div> <!-- /content -->
    </div> <!-- /page -->
  </body>
</html>
</apex:page>