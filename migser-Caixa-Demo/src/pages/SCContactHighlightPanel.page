        <apex:includeScript value="{!$Resource.jqueryknob}" />
        <script>
            $(document).ready(function(){

                var v = '{!total}' != '' ? {!total}  : 0;
                $(".dial").knob({
                    'min':0,
                    'max':100,
                    'angleArc':180,
                    'readOnly':true,
                    'width':100,
                    'angleOffset':270,
                    'height': 50,
                    'fgColor':"#149BC8",
                    'inputColor':"#149BC8"
                });

                setValue(v);
            });

            function setValue(v) {
                if(v){
                    $({value: 0}).animate({value: v}, {
                        duration: 1000,
                        easing:'swing',
                        step: function() 
                        {
                            $('.dial').val(Math.ceil(this.value)).trigger('change');
                        }
                    });
                }
            }
        </script>
